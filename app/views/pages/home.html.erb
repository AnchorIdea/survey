      <h1 class="colourTag" id="green">Green</h1>
      <h1 class="colourTag" id="chartreuse">Chartreuse</h1>
      <h1 class="colourTag" id="yellow">Yellow</h1>
      <h1 class="colourTag" id="gold">Gold</h1>
      <h1 class="colourTag" id="orange">Orange</h1>
      <h1 class="colourTag" id="coral">Coral</h1>
      <h1 class="colourTag" id="salmon">Salmon</h1>
      <h1 class="colourTag" id="pink">Pink</h1>
      <h1 class="colourTag" id="hotPink">Hot Pink</h1>
      <h1 class="colourTag" id="fuchsia">Fuchsia</h1>
      <h1 class="colourTag" id="mauve">Mauve</h1>
      <h1 class="colourTag" id="lavender">Lavender</h1>
      <h1 class="colourTag" id="plum">Plum</h1>
      <h1 class="colourTag" id="indigo">Indigo</h1>
      <h1 class="colourTag" id="purple">Purple</h1>
      <h1 class="colourTag" id="maroon">Maroon</h1>
      <h1 class="colourTag" id="scarlet">Scarlet</h1>
      <h1 class="colourTag" id="red">Red</h1>
      <h1 class="colourTag" id="tan">Tan</h1>
      <h1 class="colourTag" id="khaki">Khaki</h1>
      <h1 class="colourTag" id="beige">Beige</h1>
      <h1 class="colourTag" id="grey">Grey</h1>
      <h1 class="colourTag" id="black">Black</h1>
      <h1 class="colourTag" id="white">White</h1>
      <h3 class="colourTag" id="thankYou">Thanks for participating! :)</h3>
      <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
    </div>
  </div>
  <div class="row">
    <div class="text-field">
      <form method="post" name="colour-input-form" action="">
        <div class="col-md-10 col-md-offset-1 input-group">
          <input type="text" id="userInput" placeholder="Press 'Enter' to move on." class="form-control" />
        </div>
      </form>
    </div>
  </div>
</div>
